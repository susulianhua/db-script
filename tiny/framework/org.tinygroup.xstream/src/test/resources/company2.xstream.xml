<xstream-configuration package-name="testcompany2">

    <xstream-annotation-classes>
    </xstream-annotation-classes>

    <xstream-class-aliases>

        <class-alias alias-name="company" type="org.tinygroup.xstream.test.Company">
            <xstream-class-property-alias property-name="name" alias-name="company-name2"
                                          as-attribute="true"></xstream-class-property-alias>
            <xstream-class-property-alias property-name="dontoutput" omit="true"></xstream-class-property-alias>
            <xstream-class-property-alias property-name="departments"></xstream-class-property-alias>
            <xstream-class-property-alias property-name="roles"></xstream-class-property-alias>
        </class-alias>
        <class-alias alias-name="department" type="org.tinygroup.xstream.test.Department">
            <xstream-class-property-alias property-name="name" alias-name="company-name"></xstream-class-property-alias>
        </class-alias>
        <class-alias alias-name="role" type="org.tinygroup.xstream.test.Role">
            <xstream-class-property-alias property-name="name" alias-name="role-name"></xstream-class-property-alias>
        </class-alias>
    </xstream-class-aliases>
</xstream-configuration>